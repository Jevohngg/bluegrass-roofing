extends ../layouts/mainLayout

block pageStyles
  // If needed, reuse or reference existing styles from login.css
  link(rel="stylesheet", href="/css/login.css")

block content
  section.login-section
    .login-container
      if error
        p.error-message #{error}
      if success
        p.success-message #{success}

      form.login-form(action="/forgot-password" method="POST")
        h1 Forgot Password
        p.intro Enter your email address below, and we'll send you a verification code.

        .form-group
          label(for="email") Email Address:
          input#email(type="email" name="email" required)

        button.btn.btn-primary(type="submit") Send Reset Code
